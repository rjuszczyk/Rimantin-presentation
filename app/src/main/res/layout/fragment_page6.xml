<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/page6"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/page6_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/page6_left"
        android:layout_marginRight="340dp"
        android:layout_marginTop="175dp"
        android:layout_gravity="top|center_horizontal"
        />
    <ImageView
        android:id="@+id/page6_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/page6_center"
        android:layout_marginTop="220dp"
        android:layout_gravity="top|center_horizontal"
        />

    <ImageView
        android:id="@+id/page6_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/page6_right"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="175dp"
        android:layout_gravity="top|center_horizontal"
        />

    <FrameLayout
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_gravity="center"
        >
        <include layout="@layout/angle_text"
            android:id="@+id/angle_text"
            />
    </FrameLayout>

    <ImageButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/next_button"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="@dimen/bottom_buttons_margin"/>

    <ImageButton
        android:id="@+id/main_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_page_button"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="@dimen/bottom_buttons_margin"/>
</FrameLayout>